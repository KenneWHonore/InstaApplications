<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InstaApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InstaApplication.styles.css" asp-append-version="true" />
    <style>
        /* Navbar - Alignement des liens client et produit à droite */
        .navbar-nav {
            display: flex;
            justify-content: flex-start;
            flex-grow: 1;
        }

            /* Liens "Client" et "Produit" à droite */
            .navbar-nav .nav-item:last-child,
            .navbar-nav .nav-item:nth-last-child(2) {
                margin-left: auto;
            }

            /* Style des liens navbar */
            .navbar-nav .nav-link {
                font-weight: 500;
                color: #34495e;
                transition: color 0.3s ease;
            }

                .navbar-nav .nav-link:hover {
                    color: #3498db;
                }

        /* Titre de la page */
        h1 {
            text-align: center;
            color: #2c3e50;
            font-size: 2.5rem;
            margin-top: 30px;
            font-weight: bold;
        }

        /* Conteneur principal */
        .container {
            margin-top: 40px;
            margin-bottom: 50px; /* Ajout d'une marge pour éviter que le footer cache les éléments */
        }

        /* Footer */
        footer {
            background-color: #f4f7f6;
            padding: 0px; /* Réduction du padding du footer */
            font-size: 0.8rem; /* Réduction de la taille de la police */
            text-align: center;
        }

            footer a {
                color: #3498db;
                text-decoration: none;
                font-weight: 500;
            }

                footer a:hover {
                    color: #2980b9;
                }

        /* Liens navbar centrés */
        .navbar-brand {
            font-weight: 700;
            color: #2c3e50;
            font-size: 1.8rem;
        }

            .navbar-brand:hover {
                color: #3498db;
            }

        /* Modifier le fond de la navbar */
        .navbar {
            background-color: #ffffff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        /* Espacement des items de la navbar */
        .navbar-nav .nav-item {
            margin-left: 20px;
        }

            /* Animation hover pour les éléments */
            .navbar-nav .nav-item:hover {
                background-color: #ecf0f1;
                border-radius: 5px;
            }

        /* Suppression du contour sur les liens au focus */
        .navbar-nav .nav-link:focus {
            outline: none;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">InstaApplication</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>
                    <!-- Liens à droite -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Produits" asp-action="Create">Produit</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Client" asp-action="Create">Client</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - InstaApplication - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
